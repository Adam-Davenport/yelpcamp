<% include partials/header.ejs %>
<link rel="stylesheet" href="/public/css/signin.css">
<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-12">
            <form action="/login" method="post" class="form-signin">
                <h1 class="form-signin-heading">Sign In</h1>
                <input type="text" name="username" placeholder="username" class="form-control" autofocus>
                <input type="password" name="password" placeholder="password" class="form-control">
                <button class="btn btn-primary form-control">Login</button>
            </form>
        </div>
        <div class="col-md-2 col-sm-12">
            <hr>
            <h2>or</h2>
            <hr>
        </div>
        <div class="col-md-4 col-sm-12">
            <form action="/register" method="post" class="form-signin">
                <h1 class="form-signin-heading">Sign Up!</h1>
                <input type="text" name="username" placeholder="username" class="form-control" autofocus>
                <input type="text" name="firstName" placeholder="First Name" class="form-control">
                <input type="text" name="lastName" placeholder="Last Name" class="form-control">
                <input type="password" name="password" placeholder="password" class="form-control">
                <button class="btn btn-primary form-control">Sign Up</button>
            </form>
        </div>
    </div>
</div>
