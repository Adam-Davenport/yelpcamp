<%include ../partials/header.ejs %>
<div class="container">
	<div class="row">
	<h1>Create A New Comment For <%=campground.name%></h1>
	<form action="/campgrounds/<%=id%>/comments" method="post">
		<div class="form-check form-check-inline">
            <p>
			Rating:
			<input class="form-check-input" type="radio" name="comment[score]" id="inlineRadio1" value="1">
			<input class="form-check-input" type="radio" name="comment[score]" id="inlineRadio1" value="2">
			<input class="form-check-input" type="radio" name="comment[score]" id="inlineRadio1" value="3">
			<input class="form-check-input" type="radio" name="comment[score]" id="inlineRadio1" value="4">
			<input class="form-check-input" type="radio" name="comment[score]" id="inlineRadio1" value="5">
			</p>
		</div>
	<div class="form-group">
		<input type="text" class="form-control" name="comment[text]" placeholder="Comment">
	</div>	
	<div class="form-group">
		<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
	</div>
	</form>
	</div>
</div>
<%include ../partials/footer.ejs %>